@page
@model final_project_eryckm55.Pages.People.IndexModel
@{
    ViewData["Title"] = "People";
}

<h1 class="text-center mt-3">People</h1>
<hr />

<div class="text-end mb-3">
    <a asp-page="./Create" class="btn btn-success">Add New Person</a>
</div>

<table class="table table-striped table-bordered shadow">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th># of Pets</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.People)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Pets?.Count</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@person.PersonID" class="btn btn-primary btn-sm">Details</a>
                    <a asp-page="./Edit" asp-route-id="@person.PersonID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@person.PersonID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
