@page
@model final_project_eryckm55.Pages.Pets.IndexModel
@{
    ViewData["Title"] = "Pets";
}

<h1 class="text-center mt-3">Pet Directory</h1>
<hr />

<div class="text-end mb-3">
    <a asp-page="./Create" class="btn btn-success">Add New Pet</a>
</div>

<table class="table table-striped table-bordered shadow">
    <thead class="table-dark">
        <tr>
            <th>Pet Name</th>
            <th>Pet Type</th>
            <th>Owner</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pet in Model.Pets)
        {
            <tr>
                <td>@pet.PetName</td>
                <td>@pet.PetType</td>
                <td>@pet.Person?.Name</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@pet.PetID" class="btn btn-primary btn-sm">Details</a>
                    <a asp-page="./Edit" asp-route-id="@pet.PetID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@pet.PetID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
