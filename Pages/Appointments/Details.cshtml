@page "{id:int}"
@model final_project_eryckm55.Pages.Appointments.DetailsModel
@{
    ViewData["Title"] = "Appointment Details";
}

<h1 class="mt-4 text-center">Appointment Details</h1>
<hr />

<div class="card shadow p-4" style="max-width: 700px; margin:auto;">
    
    <dl class="row">
        <dt class="col-sm-4">Appointment Type</dt>
        <dd class="col-sm-8">@Model.Appointment.AppointmentType</dd>

        <dt class="col-sm-4">Cost</dt>
        <dd class="col-sm-8">@Model.Appointment.Cost.ToString("C")</dd>

        <dt class="col-sm-4">Date</dt>
        <dd class="col-sm-8">@Model.Appointment.Date.ToShortDateString()</dd>

        <dt class="col-sm-4">Pet Name</dt>
        <dd class="col-sm-8">@Model.Appointment.Pet?.PetName</dd>

        <dt class="col-sm-4">Pet Type</dt>
        <dd class="col-sm-8">@Model.Appointment.Pet?.PetType</dd>

        <dt class="col-sm-4">Owner</dt>
        <dd class="col-sm-8">@Model.Appointment.Person?.Name</dd>

    </dl>

    <div class="mt-3">
        <a asp-page="./Edit" asp-route-id="@Model.Appointment.AppointmentID" class="btn btn-primary w-100 mb-2">Edit Appointment</a>
        <a asp-page="./Index" class="btn btn-secondary w-100">Back to List</a>
    </div>

</div>
