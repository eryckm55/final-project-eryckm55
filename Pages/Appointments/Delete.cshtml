@page "{id:int}"
@model final_project_eryckm55.Pages.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h1 class="text-center mt-4 text-danger">Delete Appointment</h1>
<hr />

<div class="card shadow p-4" style="max-width: 600px; margin:auto;">
    
    <h4 class="text-center text-danger">Are you sure you want to delete this appointment?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-4">Appointment Type</dt>
        <dd class="col-sm-8">@Model.Appointment.AppointmentType</dd>

        <dt class="col-sm-4">Cost</dt>
        <dd class="col-sm-8">@Model.Appointment.Cost.ToString("C")</dd>

        <dt class="col-sm-4">Date</dt>
        <dd class="col-sm-8">@Model.Appointment.Date.ToShortDateString()</dd>

        <dt class="col-sm-4">Pet</dt>
        <dd class="col-sm-8">@Model.Appointment.Pet?.PetName (@Model.Appointment.Pet?.PetType)</dd>

        <dt class="col-sm-4">Owner</dt>
        <dd class="col-sm-8">@Model.Appointment.Person?.Name</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Appointment.AppointmentID" />
        <button class="btn btn-danger w-100 mt-3">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
    </form>

</div>
